<div class="container-fluid  main">
  <div class="main__center d-flex flex-column ">
    <%= render 'layouts/undernav' %>

    <div class="container-fluid main__center__newsfeed">
      <div class="card m-3 rounded">
        <div class="card-body ">
          <div class="row">
            <% current_user.followed_persons.each do |following| %>
           <div class="col-4 m-2">
          <%= link_to  user_path(following),class:"follow_container" do %>  
                <div class="follow_img">
                <%= image_tag following.photo %>
                </div>
                 <div class="flw_container ml-2">
                  <p class="follow_name"><%= following.fullname %></p>
                  <span class= "follow_info"> <%=following.followers.count%> Followers</span>
                  </div>  
            </div>
             <% end %>
             

        
            <% end %>
          </div>
        </div>
      </div>
    </div>

  </div>

  <div class="main__right d-flex flex-column border-left">
    <div class="main__right__heading d-flex align-items-center border-bottom ">
      <h2 class="ml-4 ">Whom to follow</h2>
    </div>

    <div class="main__right__whotofollow d-flex flex-column align-items-center">
      <div class="follow_these">




      </div>
    </div>

  </div>
</div>