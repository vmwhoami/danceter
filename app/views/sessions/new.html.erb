<div class="global-container">
  <div class="card login-form">
    <div class="card-body">
      <h3 class="card-title text-center">Log in to Danceter</h3>
      <div class="card-text">
        <%= form_with(url: login_path, scope: :sessions, local: true) do |f| %>
        <div class="form-group">
          <%= f.label :username, "Username" %>
          <%= f.text_field :username,class:"form-control form-control-sm" %>
        </div>
        <%= f.submit "Login",class:"btn btn-primary btn-block" %>
        <div class="sign-up">
          <p>Do you have an account? <%= link_to  "Register", register_path %></p>
        </div>
        <% end %>

      </div>
    </div>
  </div>
</div>